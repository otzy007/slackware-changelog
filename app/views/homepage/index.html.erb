<h2 class="margins-lr">You can subscribe to the ChangeLog for: </h2>

<ul id="myTabs" class="nav nav-tabs" style="margin-left:10px;">
  <li class="active">
    <a href="#slackware" data-toggle="tab">Slackware-Current</a>
  </li>
  <li><a href="#slackware64" data-toggle="tab">Slackware64-Current</a></li>
</ul>

<div id="myTabContent" class="tab-content margins-lr">
  <div class="tab-pane fade in active" id="slackware">
     <div class="row-fluid">
      <div class="span6">
      <h3> On Twitter: </h3>
	 <%= Tweet.first.current.html_safe %>
      </div>
      <div class="span6">
	 <h3> Or by Atom feed: </h3>
	 <div class="well">
	    <div class="row-fluid">
	       <div class="span6"><h4><%= link_to @posts[32].title, feed_post_url(@posts[32]) %></h4></div>
	       <div class="span6"><a class="btn btn-primary btn-small" href="/atom_feed/">
		  Subscribe</a></div>
	    </div>
	    <p><%= (@posts[32].body[0..250] + link_to(" <b>...</b>".html_safe, feed_post_url(@posts[32]))).html_safe %></p>
	    
	 </div>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="slackware64">
   <div class="row-fluid">
      <div class="span6">
	 <h3> On Twitter: </h3>
	    <%= Tweet.first.current64.html_safe %>
      </div>
      <div class="span6">
	<h3> Or by Atom feed: </h3>
	 <div class="well">
	    <div class="row-fluid">
	       <div class="span6"><h4><%= link_to @posts[64].title, feed_post_url(@posts[64]) %></h4></div>
	       <div class="span6"><a class="btn btn-primary btn-small" href="/atom_feed/?arch=64">Subscribe</a></div>
	    </div>
	    <p><%= (@posts[64].body[0..250] + link_to(" <b>...</b>".html_safe, feed_post_url(@posts[64]))).html_safe %></p>
	    
	 </div>
      </div>
   </div>
  </div>
</div>
